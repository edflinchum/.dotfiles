// -------------------------------------------------------------------------
// Niri Window Manager Modules
// -------------------------------------------------------------------------
{
    "niri/language": {
        "format": " {}",
        "tooltip": true
    },
    "niri/window": {
        "format": "{}",
        // "max-length": 50,
        "tooltip": false
    },
    "niri/workspaces": {
        "all-outputs": false,
        "on-scroll-up": "niri msg action focus-workspace-up",
        "on-scroll-down": "niri msg action focus-workspace-down",
        "format": "{value} {icon}", // options: {value}{icon}{name}{index}
        "format-icons": {
            "1": "",
            "2": "",
            "3": "🖹",
            "4": "",
            "5": "",
            "6": "",
            "7": "",
            "8": "",
            "9": "",
            // "urgent": "",
            // "focused": "",
            "default": ""
            // other icons:                   華         "  ﱘ             󰨞
        }
    }
}