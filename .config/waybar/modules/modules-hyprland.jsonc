{
    "hyprland/language": {
        "format": "ï„œ  {}",
        "tooltip": true
    },
    "hyprland/submap": {
        "format": "{}", // Icon: expand-arrows-alt ïŒ ï‚²
        "tooltip": false
    },
    "hyprland/window": {
        "format": "{}",
        "icon": false,
        "separate-outputs": true,
        "swap-icon-label": false,
        "tooltip": false
    },
    "hyprland/window#empty": {
        "format": "",
        "icon": false,
        "separate-outputs": true,
        "swap-icon-label": false,
        "tooltip": false
    },
    "hyprland/workspaces": {
        "on-click": "activate",
        "format": "{name}",
        "all-outputs": false,
        "disable-scroll": false,
        "on-scroll-up": "hyprctl dispatch workspace e-1",
        "on-scroll-down": "hyprctl dispatch workspace e+1",
        "persistent-workspaces": {
            "*": 1
            // "DP-1": [1], "DP-2": [6]
        }
    }
}
