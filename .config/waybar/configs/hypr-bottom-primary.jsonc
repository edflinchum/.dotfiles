{
    "name": "bottombar",
    "height": 42,
    "layer": "top",
    "output": "DP-1",
    "position": "bottom",
    "reload_style_on_change": true,
    "modules-left": [
        "hyprland/submap",
        "hyprland/workspaces",
        "custom/launcher",
        "group/group-info-left",
        "wlr/taskbar"
    ],
    "modules-center": [
        "hyprland/window"
        // "wireplumber",
        // "hyprland/language",
        // "battery",
        // "disk",
        // "temperature",
        // "cpu",
        // "memory",
        // "network",
        // "network#speed",
        // "custom/media"
    ],
    "modules-right": [
        "custom/media",
        "custom/weather",
        "clock#date",
        "clock#time",
        "group/group-power-right"
    ],
    "include": [
        "$HOME/.config/waybar/modules/modules-common.jsonc",
        "$HOME/.config/waybar/modules/modules-custom.jsonc",
        "$HOME/.config/waybar/modules/modules-group.jsonc",
        "$HOME/.config/waybar/modules/modules-hyprland.jsonc"
    ]
}